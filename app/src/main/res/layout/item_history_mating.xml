<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    android:layout_width="match_parent"
    android:layout_height="250dp"

    android:layout_margin="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/photo_cat_1"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="10dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/photo_cat_2"
            android:layout_width="125dp"
            android:layout_height="150dp"
            app:layout_constraintCircleRadius="10dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/photo_cat_1"
            app:riv_corner_radius="10dp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:src="@drawable/cat_gender"
            app:layout_constraintBottom_toBottomOf="@+id/photo_cat_2"
            app:layout_constraintEnd_toStartOf="@+id/photo_cat_2"
            app:layout_constraintStart_toEndOf="@+id/photo_cat_1"
            app:layout_constraintTop_toTopOf="@+id/photo_cat_1" />

        <TextView
            android:id="@+id/tv_cat_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/mmedium"
            android:text="CatName"
            android:textAlignment="center"
            android:textColor="@color/navy"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/photo_cat_1"
            app:layout_constraintStart_toStartOf="@+id/photo_cat_1"
            app:layout_constraintTop_toBottomOf="@+id/photo_cat_1" />

        <TextView
            android:id="@+id/tv_cat_sex_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mlight"
            android:text="Kelamin"
            android:textAlignment="center"
            android:textColor="@color/navy"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/photo_cat_1"
            app:layout_constraintStart_toStartOf="@+id/photo_cat_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_cat_name_1" />

        <TextView
            android:id="@+id/tv_cat_race_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mlight"
            android:text="Umur (thn)/Ras"
            android:textAlignment="center"
            android:textColor="@color/navy"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/photo_cat_1"
            app:layout_constraintStart_toStartOf="@+id/photo_cat_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_cat_sex_1" />

        <TextView
            android:id="@+id/tv_cat_name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/mmedium"
            android:text="CatName"
            android:textAlignment="center"
            android:textColor="@color/navy"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/photo_cat_2"
            app:layout_constraintStart_toStartOf="@+id/photo_cat_2"
            app:layout_constraintTop_toBottomOf="@+id/photo_cat_1" />

        <TextView
            android:id="@+id/tv_cat_sex_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mlight"
            android:text="Kelamin"
            android:textAlignment="center"
            android:textColor="@color/navy"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_cat_name_2"
            app:layout_constraintStart_toStartOf="@+id/tv_cat_name_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_cat_name_2" />

        <TextView
            android:id="@+id/tv_cat_race_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mlight"
            android:text="Umur (thn)/Ras"
            android:textAlignment="center"
            android:textColor="@color/navy"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_cat_sex_2"
            app:layout_constraintStart_toStartOf="@+id/tv_cat_sex_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_cat_sex_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>